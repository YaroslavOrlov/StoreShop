@model IEnumerable<TestOrdersWebProject.Domain.Core.ProductCharacteristic>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create new characterisctic", "Create")
</p>
<p>
    @Html.ActionLink("Create new group of characterisctics", "CreateGroup")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CharacteristicsGroup.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CharacteristicsGroup.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @if (item.CharacteristicsGroup != null)
            {
                @Html.ActionLink("Edit group", "EditGroup", new { id = item.CharacteristicsGroupId }) 
                <span>|</span>
                @Html.ActionLink("Delete Group", "DeleteGroup", new { id = item.CharacteristicsGroupId })
            }   
        </td>
    </tr>
}

</table>
